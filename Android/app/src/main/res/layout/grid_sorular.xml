<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:background="#3498db"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/first"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="left image"
            android:layout_height="150dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="0"
            android:background="#000000"
            android:layout_height="fill_parent"/>

        <ImageView
            android:id="@+id/second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="right image"
            android:layout_height="150dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_alignWithParentIfMissing="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/soru_baslik"
                android:layout_marginLeft="75dp"
                android:layout_gravity="left"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/soru_kategoriAdi"
                android:layout_marginLeft="75dp"
                android:layout_gravity="left"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/soru_tarih"
                android:layout_marginLeft="75dp"
                android:layout_gravity="left"
                android:textColor="@android:color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/soru_kullaniciAdi"
            android:layout_alignParentRight="true"
            android:gravity="top|bottom|center_vertical|center|fill_vertical"
            android:layout_alignParentBottom="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentEnd="false"
            android:textColor="@android:color/black" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:scaleType="fitCenter"

            app:riv_corner_radius="15dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="clamp"
            app:riv_oval="true"

            android:background="@android:color/transparent"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/soru_profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false" />

    </RelativeLayout>

</LinearLayout>
    
    

