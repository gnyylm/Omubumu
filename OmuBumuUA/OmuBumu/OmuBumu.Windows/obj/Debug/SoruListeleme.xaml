<Page
    x:Class="OmuBumu.SoruListeleme"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OmuBumu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="#FF3498DB">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.RowSpan="1">
                <Image x:ConnectionId='2'                      Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" Source="Assets/back-icon.png"/>
                <TextBlock Text="Soru" FontSize="15"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <ListView x:ConnectionId='1'  x:Name="gridView" IsItemClickEnabled="True"                                SelectionMode="None" Grid.RowSpan="1" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Resim1}" Stretch="Fill" HorizontalAlignment="Left" Height="210" Width="200"/>
                                    <Image Source="{Binding Resim2}" Stretch="Fill" HorizontalAlignment="Left" Height="210" Width="200"/>
                                </StackPanel>
                                <Grid Background="White" Height="50">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Height="50" Stroke="Black" Width="50" HorizontalAlignment="Left">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding ProfileImage}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding AdiSoyadi}" Foreground="Black"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding KategoriAdi}" Foreground="Black"/>
                                                <TextBlock Text="      "/>
                                                <TextBlock Text="{Binding SaveDate}" Foreground="Black"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    <TextBlock Text="{Binding KullaniciAdi}" HorizontalAlignment="Right" Foreground="Black" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <ProgressRing x:Name="progressBar" IsActive="False"/>
    </Grid>
</Page>

